
        <!-- –––––––––––––––[ PAGE CONTENT ]––––––––––––––– -->
        <main id="mainContent" class="main-content">
            <!-- Page Container -->
            <div class="page-container ptb-60">
                <div class="container">
                    <div class="row row-rl-10 row-tb-20">
                        {{#with alert}}
                            <div class="col-md-12 form-group alert {{type}}">
                                <strong>{{{message}}}</strong>
                            </div>
                            {{/with}}
                        {{#with ChiTietChienDich}}
                        <div class="page-content col-xs-12 col-sm-7 col-md-8">
                            <div class="row row-tb-20">
                                <div class="col-xs-12">
                                    <div class="deal-deatails panel">
                                        

                                        <div class="container">
                                            <div class="card">
                                                <div class="main">
                                                    <div class="co-img mt-20 mr-10" >
                                                        <img src="/assets/images/ChienDich/{{imgPathChienDich}}" alt="" width="725px"/>
                                                    </div>
                                                    <div class="vertical"></div>
                                                    <div class="content mt-20">
                                                        <h2 style="color: rgb(46, 188, 46);">{{TieuDe}}</h2>
                                                        <h1 style="color: rgb(47, 203, 47);">% <span><strong style="color: rgb(47, 203, 47);">Voucher</strong></span></h1>
                                                        <p class="mt-10">Ngày Kết Thúc: {{ThoiGianKetThuc}}</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>




                                        <div class="deal-body p-20">

                                            <h3 class="mb-10 mt-5"></h3>
                                            <p class="mb-15">{{MoTaChienDich}}</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="page-sidebar col-md-4 col-sm-5 col-xs-12">
                            <!-- Blog Sidebar -->
                            <aside class="sidebar blog-sidebar">
                                <div class="row row-tb-10">
                                    <div class="col-xs-12">
                                        <div class="widget single-deal-widget panel ptb-30 prl-20">
                                            <div class="widget-body text-center">
                                                <h2 class="mb-20 h3" style="color: rgb(46, 188, 46);">
		                                            {{TieuDe}}
		                                        </h2>
                                                
                                                <p class="color-muted">
                                                    {{MoTaChienDich}}
                                                </p>

                                                
                                                <div class="buy-now mb-40">
                                                    <div>
                                                        {{#if ../isLoggedIn}}
                                                        <!-- Trigger the modal with a button -->
                                                        <button type="button" class="btn btn-info btn-block mb-20" data-toggle="modal" data-target="#myModal">Chọn Trò Chơi</button>
                                                        {{else}}
                                                        <div>
                                                            <div class="alert alert-danger">Vui lòng đăng nhập để chơi trò chơi</div>
                                                        </div>
                                                        {{/if}}

                                                        <!-- Modal -->
                                                        <div class="modal fade" id="myModal" role="dialog">
                                                            <div class="modal-dialog modal-lg">
                                                            
                                                            <!-- Modal content-->
                                                            <div class="modal-content">
                                                                <div class="modal-body">
                                                                    <div class="text-center">
                                                                        <div class="modal-header">
                                                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                                        </div>
                                                                            {{#each LoaiTroChoi}}
                                                                            <div class="mt-5">
                                                                                <a onclick="changeUrl('{{MaChienDich}}','{{MaLoaiTro}}')" target="_blank" class="btn btn-block btn-lg" 
                                                                                style="background-image: url('/assets/images/{{imgPathTroChoi}}'); background-size: cover; width=1000px;"  >{{TenLoaiTro}}</a>
                                                                            </div>
                                                                            
                                                                            {{/each}}
                                                                        
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            
                                                        </div>
                                                    </div>

                                                
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xs-12">
                                        <!-- Recent Posts -->
                                        
                                        <div class="widget about-seller-widget panel ptb-30 prl-20">
                                            <h3 class="widget-title h-title">Thông Tin Đối Tác</h3>
                                            <div class="widget-body t-center">
                                                <figure class="mt-20 pb-10">
                                                    <img src="{{imgPathDoiTac}}" alt="">
                                                </figure>
                                                <div class="store-about mb-20">
                                                    <h3 class="mb-10">{{TenDoiTac}}</h3>
                                                    
                                                    <p class="mb-15">{{MoTa}}</p>
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <!-- End Recent Posts -->

                                    </div>
                                </div>
                            </aside>
                            <!-- End Blog Sidebar -->
                        </div>

                        {{#if ../isLoggedIn}}
                            <!-- Kiểm tra lượt chơi -->
                            {{#if HetLuotChoi}}
                                <div class="modal get-coupon-area" tabindex="-1" role="dialog" id="thongbao">
                                    <div class="modal-dialog">
                                        <div class="modal-content panel">
                                            <div class="modal-body">
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                                        aria-hidden="true">&times;</span>
                                                </button>
                                                <h5 class="mt-10 mb-15">Bạn đã hết lượt chơi trò chơi.</h5>
                                                <div>
                                                    <button onclick="QuayLaiClick('{{MaChienDich}}')" class="btn mt-15">Quay lại</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {{else}}
                                <!-- show dialog bao du diem -->
                                {{#if DuDiem}}
                                <div class="modal get-coupon-area" tabindex="-1" role="dialog" id="thongbao">
                                    <div class="modal-dialog">
                                        <div class="modal-content panel">
                                            <div class="modal-body">
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span>
                                                </button>
                                                <h5 class="mt-10">Chúc mừng bạn đủ điểm để nhận voucher mới</h5>
                                                <div>
                                                    <button class="btn mt-20 " data-dismiss="modal" data-toggle="modal" data-target="#VoucherMoi">Nhấn để xem chi tiết Voucher</button>
                                                </div>
                                                <div>
                                                    <button onclick="changeUrl('{{MaChienDich}}','{{MaLoaiTro}}')" class="btn mt-15">Chơi lại</button>
                                                </div>
                                                <div>
                                                    <button onclick="QuayLaiClick('{{MaChienDich}}')" class="btn mt-15 mb-15">Quay lại</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                {{/if}}
                                {{#if KhongDuDiem}}
                                <div class="modal get-coupon-area" tabindex="-1" role="dialog" id="thongbao">
                                    <div class="modal-dialog">
                                        <div class="modal-content panel">
                                            <div class="modal-body alert alert-dager">
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span>
                                                </button>
                                                <h5 class="mt-10">Rất tiếc bạn chưa đủ điểm nhận voucher</h5>
                                                <div>
                                                    <button onclick="changeUrl('{{MaChienDich}}','{{MaLoaiTro}}')" class="btn mt-20">Chơi lại</button>
                                                </div>
                                                <div>
                                                    <button onclick="QuayLaiClick('{{MaChienDich}}')" class="btn mt-15">Quay lại</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                {{/if}}

                                <!-- Hien thi loai voucher nguoi dung lay duoc-->
                                {{#if ConVoucher}}
                                <div class="modal get-coupon-area" tabindex="-1" role="dialog" id="VoucherMoi">
                                    <div class="modal-dialog">
                                        <div class="modal-content panel">
                                            <div class="modal-body alert alert-dager">
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span>
                                                </button>
                                                
                                                <div class="modal-header">
                                                    <h5 class="color-green">Chúc mừng bạn đã nhận được một Voucher mới!</h5>
                                                </div>
                                                
                                                <div class="panel-body">
                                                    <ul class="deal-meta list-inline mb-10">
                                                        <h2 class="color-green"><Strong>VOUCHER</Strong></h2>
                                                    </ul>
                                                    <h3 class="color-green mb-10 t-uppercase">{{TiLeGiamGia}}% OFF</h3>
                                                    <h6 class="deal-title mb-10">
                                                        <a href="#">{{TenDoiTac}}</a>
                                                    </h6>
                                                    <div class=" color-muted  font-6"><i class="lnr lnr-clock mr-10"></i>Create On: {{NgayTao}}</div>
                                                    <div class="mb-15 color-muted mb-20 font-6"><i class="lnr lnr-clock mr-10"></i>Expires On: {{NgayHetHan}}</div>
                                                </div>
                                                
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                {{/if}}
                                {{#if HetVoucher}}
                                <div class="modal get-coupon-area" tabindex="-1" role="dialog" id="thongbao">
                                    <div class="modal-dialog">
                                        <div class="modal-content panel">
                                            <div class="modal-body">
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span>
                                                </button>
                                                <h5 class="mt-10">Số lượng loại Voucher cho chiến dịch này đã hết. Vui lòng chọn loại Voucher khác</h5>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                {{/if}}
                            {{/if}}

                            
                        {{else}}  <!-- cua isLoggedIn --> 
                            <div class="modal get-coupon-area" tabindex="-1" role="dialog" id="thongbao">
                                <div class="modal-dialog">
                                    <div class="modal-content panel">
                                        <div class="modal-body">
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                                    aria-hidden="true">&times;</span>
                                            </button>
                                            <h5 class="mt-10 mb-15">Bạn chưa đăng nhập. Vui lòng đăng nhập</h5>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {{/if}}


                        {{/with}}
                    </div>
                </div>
            </div>
            <!-- End Page Container -->

        </main>

        <script>
            document.addEventListener('DOMContentLoaded', function () {
                $('#thongbao').modal('show');
            });

            let arrURL = [
                {link: 'localhost:3000', id:'1'},
                {link: 'localhost:2500', id:'2'},
                {link: 'localhost:2200', id:'3'},
                {link: 'localhost:2000', id:'4'},
            ];

            function changeUrl (MaChienDich, MaLoaiTro) {
                let urlGame = '';
                for (let i=0; i<4; i++) {
                    if(arrURL[i].id === MaLoaiTro) {
                        urlGame = arrURL[i].link;
                    }
                }
                const url = `http://${urlGame}?id=${MaChienDich}&MaLoaiTro=${MaLoaiTro}`;
                window.location.href = url;
            }

            function QuayLaiClick (MaChienDich) {
                const url = `http://localhost:5000/ChienDich/${MaChienDich}`;
                window.location.href = url;
            }
        </script>









